extends layout

block content
  h1 Game page #{id} (#{title})

  p#waiting(class=`${ready ? "hidden" : ""}`) Waiting on users (#[span.current-count #{count}] of #[span.required-count #{required_count}])

  #game-table(class=`${ready ? "" : "hidden"}`)
    .player-hand
      .card.eight.blue
      .card.five.red
      .card.five.green
      .card.eight.yellow

block footer
  script(src="/javascripts/games/join.js")